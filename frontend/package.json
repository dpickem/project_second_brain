{
  "name": "second-brain-frontend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite --host 0.0.0.0 --port 3000",
    "build": "vite build",
    "prebuild": "npm run generate:enums",
    "preview": "vite preview --host 0.0.0.0 --port 3000",
    "lint": "eslint .",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,css}\"",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report",
    "generate:enums": "cd .. && python scripts/generate_enums.py",
    "generate:api-types": "node scripts/generate-api-types.js",
    "api:check": "node scripts/generate-api-types.js && git diff --exit-code src/api/openapi.json || (echo '‚ùå OpenAPI schema changed! Commit the new schema or update backend.' && exit 1)",
    "dev:capture": "vite --config capture/vite.config.js --host 0.0.0.0",
    "build:capture": "vite build --config capture/vite.config.js",
    "preview:capture": "vite preview --config capture/vite.config.js --host 0.0.0.0"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.18",
    "@heroicons/react": "^2.1.1",
    "@monaco-editor/react": "^4.7.0",
    "@tanstack/react-query": "^5.20.0",
    "axios": "^1.6.7",
    "clsx": "^2.1.0",
    "cmdk": "^1.1.1",
    "d3": "^7.8.5",
    "date-fns": "^3.3.1",
    "framer-motion": "^11.0.3",
    "highlight.js": "^11.9.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-force-graph-2d": "^1.25.0",
    "react-hot-toast": "^2.6.0",
    "react-intersection-observer": "^10.0.0",
    "react-markdown": "^9.0.1",
    "react-router-dom": "^6.22.0",
    "recharts": "^3.6.0",
    "rehype-highlight": "^7.0.0",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.0",
    "tailwind-merge": "^2.2.1",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@tailwindcss/typography": "^0.5.10",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/d3": "^7.4.3",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "eslint": "^9.39.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.1.0",
    "globals": "^16.2.0",
    "jsdom": "^26.1.0",
    "openapi-fetch": "^0.9.8",
    "openapi-typescript": "^7.0.0",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.1",
    "vite": "^7.3.1",
    "vitest": "^3.2.4"
  }
}
